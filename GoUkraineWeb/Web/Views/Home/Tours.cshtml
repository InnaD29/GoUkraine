@{
  ViewData["Title"] = "Tours Page";
}
<link href="~/css/tours.css" rel="stylesheet" />
<div class="container-fluid m-0 p-0">
  <div class="hero page hero-carousel">
    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active" data-interval="1500">
          <img src="~/images/tours/1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" data-interval="1500">
          <img src="~/images/tours/2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="~/images/tours/3.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
      <a class="carousel-control-prev icon" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
