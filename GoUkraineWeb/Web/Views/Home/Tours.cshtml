@{
  ViewData["Title"] = "Tours Page";
}
<link href="~/css/tours.css" rel="stylesheet" />
<div class="container-fluid m-0 p-0">
  <div class="hero page hero-carousel">
    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active" data-interval="1500">
          <img src="~/images/tours/1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" data-interval="1500">
          <img src="~/images/tours/2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="~/images/tours/3.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
      <a class="carousel-control-prev icon" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
<div class="container  block top-0 pt-5 pl-0 pr-0">
  <div class="row">
    <div class="col-sm-12">
      <div class="heading tours">
        <h2>Обери тур на будь який смак</h2>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 mb-5 ">
      <button class="openbtn" onclick="openNav()">
        <span>
          <svg>
            <use xlink:href="/svg/sprite.svg#filter"></use>
          </svg>
        </span><span class="pl-1">Фільтри</span>
      </button>
    </div>
  </div>
</div>



    @*********************BLOCK TOURS******************************@
  <div class="container ml-1">
    <div class="row m-0">
      <div class="col-md-6 col-lg-4 col-xl-4">
        <div class="tour">
          <div class="img-tour">
            <img src="~/images/tours/9.jpg" class="img-fluid rounded" alt="Турція">
            <div class="img-description d-flex justify-content-between">
              <div class="price">
                <p class="m-0">Вартість туру: 2000 грн.</p>
                <p class="m-0">за людину</p>
              </div>
              <a href="/home/DescriptionTour" class="more">
                <span>Детельніше</span>
              </a>
            </div>
            <div class="star hotel-star">
              <span>
                <svg>
                  <use xlink:href="/svg/sprite.svg#star"></use>
                </svg>
              </span>
              <p class="date-out">виїзд: 18/07/21</p>
            </div>
          </div>
        </div>
        <div class="place">
          <p class="m-0">Oz Hotels Sui Resort</p>
          <p class="p-0">Египит, Хургада</p>
        </div>
      </div>
   </div>
  </div>


  <script src="~/js/tours.js"></script>

